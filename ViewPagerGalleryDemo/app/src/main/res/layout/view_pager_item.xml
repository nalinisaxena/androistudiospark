<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorControlActivated"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:id="@+id/ranklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank: "
        android:textStyle="italic"
        android:textColor="#000000"/>

    <TextView

        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ranklabel"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/countrylabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ranklabel"
        android:text="Country: "
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rank"
        android:layout_toRightOf="@id/countrylabel"
        android:layout_marginTop="5dp"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/populationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countrylabel"
        android:layout_marginTop="5dp"
        android:text="Population: "
        android:textStyle="italic"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/country"
        android:layout_toRightOf="@id/populationLabel"
        android:textColor="#000000"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/imgflag"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/populationLabel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:padding="1dp" />

</RelativeLayout>