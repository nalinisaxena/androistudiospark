<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/relative1">


<!--for custom bar-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/m1"/>



    <RelativeLayout

        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#5BBFF0">

        <ImageView

            android:id="@+id/imageLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_location_on_black_24dp"
            />
        <TextView

            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pune"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/imageLoc"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_marginLeft="18dp"/>

        <TextView

            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| India"
            android:textColor="#80FFFF"
            android:layout_toRightOf="@id/city"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative3"
        android:layout_below="@id/relative2"
        android:layout_marginBottom="80dp">

        <TextView

            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/12/2016"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"/>

        <TextView

            android:id="@+id/txtDay"
            android:layout_below="@id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thrusday"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgpic"
            android:layout_alignRight="@id/txtDate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/w1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32\u00B0"
            android:fontFamily="sans-serif-thin"
            android:textSize="230sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>

    </RelativeLayout>




    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/w2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tues"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thrus"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>


            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20/25\u00B0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/w2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>


        </LinearLayout>


    </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>