<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    tools:context="com.example.nalini.multithreadingdemo.MainActivity">


    <Button
        android:id="@+id/btnStartThread"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:text="Start Thread"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnFetch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStartThread"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:text="Fetch Data"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <EditText

        android:id="@+id/etxEnterUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFetch"
        android:hint="Enter the Url"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnFatchSyncdata"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etxEnterUrl"
        android:backgroundTint="@color/colorPrimary"
        android:text="Fatching Async Task"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />


    <!--<ImageView-->
        <!--android:id="@+id/imgPicaaso"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/btnFetch" />-->


</RelativeLayout>
